@model IEnumerable<ProductAdditionalDetailsDto>
<!-- BEGIN: Content-->
@if (TempData["err"] != null)
{
    <span class="alert alert-danger">@TempData["err"]</span>
}
@if (TempData["suc"] != null)
{
    <span class="alert alert-success">@TempData["suc"]</span>
}


<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4"><span class="text-muted fw-light">  إداراة الصفات الملحقة  /</span> الصفات الملحقة  </h4>


        <!-- Ajax Sourced Server-side -->
        <div class="card">

            <div class="row ">
                <div class="col-md-6 text-start  mt-3  ps-4">
                    <h5 class="card-title mb-0 ms-2"> الصفات المتغيرة</h5>
                </div>
                <div class="col-md-6 text-end">

                    <div class="dt-buttons text-end me-3">
                        <a class="dt-button create-new btn btn-primary mt-3" asp-controller="ProductAdditionalDetails" asp-action="Create" tabindex="0">Add Atrtibute</a>

                    </div>
                </div>
            </div>
            @if (TempData.ContainsKey("msg"))
            {
                <div class="alert alert-warning">@TempData["msg"]</div>
            }
            <!-- datatable start -->
            @if (Model != null && Model.Any())
            {
                <div class="card-datatable text-nowrap">
                    <table class="datatables-ajax table  ">
                        <thead class="border-top">

                            <tr>

                                <th> @Html.DisplayNameFor(d=>d.Id)</th>
                                <th> @Html.DisplayNameFor(d=>d.ArTitle)</th>
                                <th>@Html.DisplayNameFor(d=>d.EnTitle)</th>
                                <th>@Html.DisplayNameFor(d=>d.ArValue)</th>
                                <th>@Html.DisplayNameFor(d=>d.EnValue)</th>
                                <th>@Html.DisplayNameFor(d=>d.ProductId)</th>

                                <th>الحالة </th>
                                <th>تاريخ الاضافة </th>

                                <th>الاجرءات</th>
                            </tr>


                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>


                                    <td>@item.Id</td>
                                    <td>@item.ArTitle</td>
                                    <td>@item.EnTitle</td>
                                    <td>@item.ArValue</td>
                                    <td>@item.EnValue</td>
                                    <td>@item.ProductId</td>
                                    <td>---</td>
                                    
                                  

                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" asp-controller="ProductAdditionalDetails" asp-action="Edit" asp-route-Id="@item.Id"> تعديل  </a>
                                                <a class="dropdown-item" asp-controller="ProductAdditionalDetailsController" asp-action="Delete" asp-route-Id="@item.Id"> حذف  </a>

                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-danger  m-5"> <center>لا توجد بيانات</center></div>
            }

        </div>
        <!--/ Ajax Sourced Server-side -->



        <div class="content-backdrop fade"></div>

        <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
</div>
<!-- Overlay -->
<div class="layout-overlay layout-menu-toggle"></div>

<!-- Drag Target Area To SlideIn Menu On Small Screens -->
<div class="drag-target"></div>

